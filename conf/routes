# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                      controllers.HomeCtr.index
GET           /menuItems             controllers.HomeCtr.menuItems

GET           /user                  controllers.UserCtr.index
POST          /user                  controllers.UserCtr.save
PUT           /user/:id              controllers.UserCtr.update(id: Long)
DELETE        /user/:id              controllers.UserCtr.delete(id: Long)

GET           /role                  controllers.RoleCtr.index
POST          /role                  controllers.RoleCtr.save
PUT           /role/:id              controllers.RoleCtr.update(id: Long)
DELETE        /role/:id              controllers.RoleCtr.delete(id: Long)
GET           /role/all              controllers.RoleCtr.all

GET           /chucvu                controllers.ChucVuCtr.index
POST          /chucvu                controllers.ChucVuCtr.save
PUT           /chucvu/:id            controllers.ChucVuCtr.update(id: Long)
DELETE        /chucvu/:id            controllers.ChucVuCtr.delete(id: Long)

GET           /task                  controllers.TaskCtr.index

GET           /authority             controllers.AuthorityCtr.index
POST          /authority             controllers.AuthorityCtr.save
PUT           /authority/:id         controllers.AuthorityCtr.update(id: Long)
DELETE        /authority/:id         controllers.AuthorityCtr.delete(id: Long)

GET           /user/login            controllers.AuthCtr.login
POST          /user/auth             controllers.AuthCtr.auth
GET           /user/logout           controllers.AuthCtr.logout

GET           /sophancong            controllers.SoPhanCongCtr.index
POST          /sophancong            controllers.SoPhanCongCtr.save
PUT           /sophancong/:id        controllers.SoPhanCongCtr.update(id: Long)
DELETE        /sophancong/:id        controllers.SoPhanCongCtr.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file          controllers.Assets.at(path="/public", file)
GET           /partials/*file        controllers.Assets.at(path="/public/html", file)